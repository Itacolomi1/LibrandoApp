<body id="cadastrosala">

    <nav class="navbar navbar-light justify-content-between">
        <a class="navbar-brand" href="\index">
            <img id="logo" src="img/logo.png" class="lazy" title="Librando Libras Jogo Educacao" alt="Librando Libras Jogo Educacao">
            <img id="logo-titulo" src="img/titulo.png" class="lazy" title="Librando Libras Jogo Educacao" alt="Librando Libras Jogo Educacao">

        </a>
        <div class="form-inline">

        </div>

    </nav>
    <div id="cadastro-sala">
        <form>
            <div class="form-group">
                <label for="exampleDropdownFormNome">Nome da sala</label>
                <input type="text" class="form-control" id="exampleDropdownFormNome" placeholder="Nome da sala">

                <br />
                <label>Jogo da sala</label>
                <fieldset id="groupJogos">
                    <div class="row">
                        <div class="col-sm-7">
                            <input type="radio" value="Quiz" name="groupJogos">
                            <label> Jogo Quiz </label>
                        </div>
                        <div class="col-sm-5">
                            <input type="radio" value="Meteoro" name="groupJogos">
                            <label> Jogo Meteoro </label>
                        </div>
                    </div>
                </fieldset>

            </div>
            <button onclick="criarSala();return false;" type="button" class="btn btn-primary">Cadastrar</button>
            <div class="form-group acesso">
                <label for="exampleDropdownFormLink">Link de acesso</label>
                <input type="text" class="form-control" id="exampleDropdownFormLink" placeholder="Link de acesso">
                <label for="exampleDropdownFormCodigo">Código</label>
                <input type="text" class="form-control" id="exampleDropdownFormCodigo" placeholder="Código">
            </div>
        </form>
    </div>

    <footer>
        <div class="texto">
            <p>2021 © Librando. Todos os direitos reservados. </p>

        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="./js/sala.js"></script>
</body>

</html>